<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fitnes_ai.Views.PlanPage"
             xmlns:viewmodels="clr-namespace:Fitnes_ai.ViewModels"
             xmlns:converters="clr-namespace:Fitnes_ai.Converters"
             Title="Plan"
             Shell.BackgroundColor="{StaticResource Primary}"
             Shell.ForegroundColor="White"
             Shell.TitleColor="White"
             BackgroundColor="White">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackLayout Grid.Row="0" Padding="15,15,15,10">
            <Label Text="{Binding CurrentPlan.Name}"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Gray900}"
                   HorizontalOptions="Start" />
        </StackLayout>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="1"
                           IsVisible="{Binding IsLoading}"
                           IsRunning="{Binding IsLoading}"
                           Color="{StaticResource Primary}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           HeightRequest="50" />

        <!-- Empty State Message -->
        <StackLayout Grid.Row="1"
                     IsVisible="{Binding HasNoWorkouts}"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     Padding="40">
            <Label Text="No workouts in this plan"
                   FontSize="18"
                   TextColor="{StaticResource Gray500}"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10" />
            <Label Text="Add your first workout to get started!"
                   FontSize="14"
                   TextColor="{StaticResource Gray400}"
                   HorizontalOptions="Center" />
        </StackLayout>

        <!-- Workouts List -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Workouts}"
                        IsVisible="{Binding HasWorkouts}"
                        Margin="15,0,15,10"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="White"
                           CornerRadius="16"
                           HasShadow="False"
                           BorderColor="{StaticResource Gray200}"
                           Padding="16"
                           Margin="0,8">
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <StackLayout Grid.Column="0">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PlanViewModel}}, Path=WorkoutTappedCommand}"
                                                          CommandParameter="{Binding}" />
                                </StackLayout.GestureRecognizers>
                                
                                <Label Text="{Binding Title}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Gray900}" />
                                <Label Text="{Binding Exercises.Count, StringFormat='{0} exercises'}"
                                       FontSize="14"
                                       TextColor="{StaticResource Gray500}"
                                       Margin="0,4,0,0" />
                            </StackLayout>
                            
                            <!-- Delete Button -->
                            <Button Grid.Column="1"
                                    Text="✕"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    BackgroundColor="#FFEBEE"
                                    TextColor="#D32F2F"
                                    CornerRadius="20"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    Padding="0"
                                    Margin="8,0"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PlanViewModel}}, Path=DeleteWorkoutCommand}"
                                    CommandParameter="{Binding}" />
                            
                            <!-- Arrow Indicator -->
                            <Label Grid.Column="2"
                                   Text="›"
                                   FontSize="24"
                                   TextColor="{StaticResource Gray400}"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   FontAttributes="Bold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PlanViewModel}}, Path=WorkoutTappedCommand}"
                                                          CommandParameter="{Binding}" />
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Action Button at Bottom -->
        <StackLayout Grid.Row="2" Padding="20,15,20,20" BackgroundColor="White">
            <Button Text="+ Add Workout"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    CornerRadius="25"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    HorizontalOptions="Fill"
                    Command="{Binding AddWorkoutCommand}" />
        </StackLayout>
    </Grid>
</ContentPage>
