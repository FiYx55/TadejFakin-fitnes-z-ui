<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Fitnes_ai.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Fitnes_ai"
    xmlns:views="clr-namespace:Fitnes_ai.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Fitnes_ai"
    BackgroundColor="{StaticResource Primary}">

    <Shell.Resources>
        <Style TargetType="TabBar">
            <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource Primary}" />
            <Setter Property="Shell.TabBarTitleColor" Value="White" />
            <Setter Property="Shell.TabBarUnselectedColor" Value="#B4FFFFFF" />
            <Setter Property="Shell.TabBarForegroundColor" Value="White" />
        </Style>
        
        <Style TargetType="Shell" ApplyToDerivedTypes="True">
            <Setter Property="Shell.BackgroundColor" Value="{StaticResource Primary}" />
            <Setter Property="Shell.ForegroundColor" Value="White" />
            <Setter Property="Shell.TitleColor" Value="White" />
            <Setter Property="Shell.DisabledColor" Value="#B4FFFFFF" />
            <Setter Property="Shell.UnselectedColor" Value="#95FFFFFF" />
        </Style>
        
        <Style TargetType="ShellContent">
            <Setter Property="Shell.BackgroundColor" Value="{StaticResource Primary}" />
            <Setter Property="Shell.ForegroundColor" Value="White" />
            <Setter Property="Shell.TitleColor" Value="White" />
        </Style>
    </Shell.Resources>

    <TabBar>
        <ShellContent
            x:Name="PlanTab"
            Title="Plan"
            ContentTemplate="{DataTemplate views:PlanPage}"
            Icon="{OnPlatform 'plan_b.svg', WinUI='Images/plan_b.svg'}"
            Route="PlanPage"
            Shell.BackgroundColor="{StaticResource Primary}"
            Shell.ForegroundColor="White"
            Shell.TitleColor="White" />
        <ShellContent
            x:Name="ExercisesTab"
            Title="Exercises"
            ContentTemplate="{DataTemplate views:ExercisesPage}"
            Icon="{OnPlatform 'exercise_b.svg', WinUI='Images/exercise_b.svg'}"
            Route="ExercisesPage"
            Shell.BackgroundColor="{StaticResource Primary}"
            Shell.ForegroundColor="White"
            Shell.TitleColor="White" />
        <ShellContent
            x:Name="PlansTab"
            Title="Plans"
            ContentTemplate="{DataTemplate views:PlanSelectionPage}"
            Icon="{OnPlatform 'manage_b.svg', WinUI='Images/manage_b.svg'}"
            Route="PlanSelectionPage"
            Shell.BackgroundColor="{StaticResource Primary}"
            Shell.ForegroundColor="White"
            Shell.TitleColor="White" />
    </TabBar>

</Shell>
